<%- include('../adminPartials/menuLateral.ejs'); %>


  <div class="content-wrapper">

    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Menu</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Dashboard v3</li>
            </ol>
          </div>
        </div>
      </div>
    </div>

    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-6">
            <div class="card">
              <div class="card-header border-0">
                <h3 class="card-title">Usuários</h3>
                <div class="card-tools">
                  <a href="#" class="btn btn-tool btn-sm">
                    <i class="fas fa-download"></i>
                  </a>
                  <a href="#" class="btn btn-tool btn-sm">
                    <i class="fas fa-bars"></i>
                  </a>
                </div>
              </div>
              <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                  <thead>
                  <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Telefone</th>
                    <th>Ação</th>
                  </tr>
                  </thead>
                  <tbody>
                  <tr>
                    <% user.forEach(user => {  %> 
                    <td>
                      <%= user.nome %>
                    </td>
                    <td>
                      <%= user.email %>
                    </td>
                    <td>
                      <%= user.telefone %>
                    </td>
                    <td>
                      <a href="/editAdmin/<%=user.id  %>">editar</a>


                      <form action="adminDelete" method="post" onsubmit="confirmarDelecao(event, this)">
                        <input type="hidden" name="id" value="<%= user.id  %> ">
                        <button>Deletar</button>
                      </form>


                    </td>
                  </tr>
                 <% })  %> 
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <aside class="control-sidebar control-sidebar-dark">
  </aside>
  <footer class="main-footer">
    <strong>Copyright &copy; 2014-2021 <a href="">AdminLTE.io</a>.</strong>
    All rights reserved.
    <div class="float-right d-none d-sm-inline-block">
      <b>Version</b> 3.2.0
    </div>
  </footer>
</div>
<script src="../../plugins/jquery/jquery.min.js"></script>
<script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="../../dist/js/adminlte.js"></script>
<script src="../../plugins/chart.js/Chart.min.js"></script>
<script>
  function confirmarDelecao(event, form){
    event.preventDefault();
    var resposta = confirm("Deseja realmente excluir este usuário?");
    if(resposta){
      form.submit();
    }
  }
</script>
<script src="../../dist/js/pages/dashboard3.js"></script>
</body>
</html>

